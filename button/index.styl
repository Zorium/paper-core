@require 'nib'
@require '../base'
json('../colors.json')

.zp-button
  min-height: 48px
  min-width: 48px
  display: inline-block
  position: relative
  background: transparent
  text-align: center
  outline: none
  user-select: none
  cursor: pointer
  -webkit-tap-highlight-color: transparent
  overflow: hidden
  padding: 4px

  > .ripple-box
    display: inline-block
    position: relative
    overflow: hidden
    border-radius: 2px

    > .button
      zp-font-button()
      display: inline-block
      position: relative
      box-sizing: border-box
      padding: 0 8px
      min-width: 88px
      min-height: 36px
      line-height: 36px
      background: transparent
      text-align: center
      outline: none
      border-radius: 2px
      user-select: none
      cursor: pointer
      overflow: hidden
      border: none

      &[disabled]
        cursor: auto
        pointer-events: none

  &.is-raised
    > .ripple-box
      > .button
        zp-shadow-1()

        &:active
          zp-shadow-2()

        &[disabled]
          box-shadow: none
          background: $black12
          color: $black26

  &.is-raised&.is-dark
    > .ripple-box
      > .button
        color: $white

        &[disabled]
          background: $white12
          color: $white30

  &.is-short
    > .ripple-box
      > .button
        min-width: 48px

  &.is-flat
    > .ripple-box
      > .button
        &:hover
          background: alpha(#999, 0.20)

        &:active
          background: alpha(#999, 0.40)

        &[disabled]
          color: $black26

  &.is-flat&.is-dark
    > .ripple-box
      > .button
        color: $white

        &:hover
          background: alpha(#ccc, 0.15)

        &:active
          background: alpha(#ccc, 0.25)

        &[disabled]
          color: $white30
