@require '../base'
json('../colors.json')

@keyframes zp-ripple-animation
  from
    opacity: 0.25
    transform: scale(12)
  to
    transform: scale(1000)
    opacity: 0

.zp-ripple
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  overflow: hidden

  > .wave
    position: absolute
    width: 1px
    height: 1px
    border-radius: 50%
    background: $white
    animation: zp-ripple-animation 1.2s
    pointer-events: none
    opacity: 0

  &.is-circle
    // fix chrome border-radius clipping
    transform: translate3d(0, 0, 0)
    border-radius: 50%
