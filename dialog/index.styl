@require 'nib'
@require '../base'
json('../colors.json')

.z-dialog
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center
  z-index: 1000000

  > .backdrop
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: $black
    opacity: 0.4
    z-index: 1000000

  > .dialog
    z-shadow-3()
    z-index: 1000003
    background: $white
    min-width: 280px
    padding-bottom: 8px

    > .info
      padding: 24px 24px 16px 24px

      > .title
        z-font-title()
        margin-bottom: 16px

      > .content
        z-font-body1()
        color: $black54

    > .actions
      text-align: right
      box-sizing: border-box
      padding: 0 12px
      color: $blue500
