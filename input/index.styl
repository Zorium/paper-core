@require '../base'
json('../colors.json')


.zp-input
  zp-font-subhead()
  min-height: 40px // top 16px, text 16px, bottom 8px, under-line 8px
  margin-bottom: 20px // under-line 8px, error-text 12px
  display: block
  outline: none
  text-align: inherit
  position: relative

  > .hint
    pointer-events: none
    position: absolute
    background: transparent
    top: 16px
    color: $grey600

    transform-origin: 0% 0%
    transition: top 0.2s cubic-bezier(0.4, 0, 0.2, 1),
                font-size 0.2s cubic-bezier(0.4, 0, 0.2, 1)

  > .input
    padding: 16px 0 8px 0
    width: 100%
    font: inherit
    color: inherit
    background-color: transparent
    border: none
    outline: none
    -webkit-tap-highlight-color: transparent
    appearance: textfield

    &::-webkit-outer-spin-button, &::-webkit-inner-spin-button
      -webkit-appearance: none
      margin: 0

  > .underline-wrapper
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    overflow: hidden
    pointer-events: none

    > .underline
      position: absolute
      bottom: 0
      left: 0
      height: 1px
      width: 100%
      background: $grey600

  > .error
    zp-font-caption()
    color: $red500
    margin-top: 8px
    position: absolute
    pointer-events: none
    background: transparent

  &.is-dark
    color: $white

    > .hint
      color: $white70

    > .underline-wrapper
      > .underline
        background: $white70

  &.is-floating
    min-height: 60px // top 16px, label 12px, pre-text 8px, text 16px, post-text 8px

    > .hint
      top: 32px

    > .input
      padding: 32px 0 8px 0

  &.is-floating&.is-focused, &.is-floating&.has-value
    > .hint
      font-size: 12px
      top: 12px
      display: block

  &:not(.is-floating)&.has-value
    > .hint
      display: none

  &.is-focused, &:hover:not(.is-disabled)
    > .underline-wrapper
      > .underline
        height: 2px

  &.is-error
    > .hint
      color: $red500

    > .input
      caret-color: $red500

    > .underline-wrapper
      > .underline
        background: $red500

  &.is-disabled
    > .underline-wrapper
      > .underline
        background: none
        border-bottom: 1px dashed $grey600

  &.is-boxed
    background: $black6
    border-radius: 4px
    padding: 0 16px
    box-sizing: border-box

    > .underline-wrapper
      border-radius: 4px

  &.is-boxed&.is-floating
    min-height: 52px // top 8px, label 12px, pre-text 8px, text 16px, post-text 8px

    &.is-focused, &.has-value
      > .hint
        top: 8px
